<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppS2PBlacio.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="15" CornerRadius="0">
                <Label Text="LogIn" HorizontalTextAlignment="Center" TextColor="DarkBlue" FontSize="20"/>
            </Frame>
            <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
            <Entry x:Name="txtContraseña" Placeholder="Contraseña" IsPassword="True"/>

            <Button x:Name="Log" Text="Iniciar sesion" Clicked="Login_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>